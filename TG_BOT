import asyncio
import os
import random
from dotenv import load_dotenv
from aiogram import Bot, Dispatcher, F
from aiogram.filters import Command
from aiogram.types import Message
from datetime import datetime
from keyboards import keyboard_single_row






# Загружаем токен
load_dotenv()
TOKEN = os.getenv('BOT_TOKEN')

# Информация о боте
CREATED_DATE = "1 августа 2025"
CREATOR = "Замир"

# Диспетчер
dp = Dispatcher()

# Команда /start
@dp.message(Command("start"))
async def command_start_handler(message: Message) -> None:
    await message.reply(f" Привет, {message.from_user.first_name}!", reply_markup=keyboard_single_row)

# Команда /info
@dp.message(Command("info"))
async def command_info_handler(message: Message) -> None:
    user = message.from_user
    info_text = (
        f" Информация о пользователе:\n"
        f" ID: {user.id}\n"
        f" Имя: {user.first_name or 'Не указано'}\n"
        f" Фамилия: {user.last_name or 'Не указано'}\n"
        f" Username: @{user.username if user.username else 'Нет'}\n"
        f" Язык: {user.language_code or 'Неизвестно'}\n"
        f" Бот: {'Да' if user.is_bot else 'Нет'}"
    )
    await message.reply(info_text)

# Команда /about
@dp.message(Command("about"))
async def command_about_handler(message: Message) -> None:
    await message.reply(
        f" Я — Telegram-бот, созданный {CREATOR}.\n"
        f"Дата создания: {CREATED_DATE}.\n"
        "Я умею выполнять простые команды и сообщать информацию!"
    )


@dp.message(Command("device"))
async def device_guess(message: Message):
    user = message.from_user
    name = user.first_name.lower() if user.first_name else ""

    # Предположение по ключевым словам в имени (чисто символически)
    if any(x in name for x in ["iphone", "ios", "apple"]):
        guess = "Ты точно с iPhone "
    elif any(x in name for x in ["samsung", "galaxy"]):
        guess = "Galaxy? Значит Samsung "
    elif any(x in name for x in ["mi", "xiaomi", "redmi"]):
        guess = "Пахнет MIUI — Xiaomi или Redmi?"
    elif "huawei" in name:
        guess = "Huawei? Китайская сила "
    elif "realme" in name:
        guess = "Realme — шустрый выбор "
    elif any(x in name for x in ["pc", "notebook", "laptop", "windows", "linux", "mac"]):
        guess = "Ты с ноутбука или ПК"
    elif "nokia" in name:
        guess = "Nokia... Надёжный как кирпич"
    else:
        guess = random.choice([
            "Ты с неизвестного мне устройства ",
            "Похоже, ты пользуешься кастомным телефоном ",
            "Ты из будущего? Такое устройство мне не знакомо"
        ])
    
    await message.reply(f" Я предполагаю: {guess}")


@dp.message(F.video)
async def video_info_handler(message: Message) -> None:
    video = message.video
    info_text = (
        f" Информация о видео:\n"
        f"File ID: `{video.file_id}`\n"
        f"Unique ID: `{video.file_unique_id}`\n"
        f"Ширина: {video.width}px\n"
        f"Высота: {video.height}px\n"
        f"Длительность: {video.duration} сек.\n"
    )
    await message.reply(info_text, parse_mode="Markdown")

@dp.message(Command("video"))
async def help_information(message: Message):
    await message.answer_video('BAACAgIAAxkBAAPHaJBKklLDUu_KNXX9kAmeWT9G65IAApR-AAKQXYBIbly5UGKwFwk2BA')

# Команда /time
@dp.message(Command("time"))
async def command_time_handler(message: Message) -> None:
    now = datetime.now().strftime("%d.%m.%Y %H:%M:%S")
    await message.reply(f" Текущее время: {now}")

# Команда /help
@dp.message(Command("help"))
async def command_help_handler(message: Message) -> None:
    await message.reply(
        f" Этот бот был создан {CREATED_DATE}.\n"
        f" Автор: {CREATOR}\n\n"
        " Доступные команды:\n"
        "/start — начать работу\n"
        "/help — список команд\n"
        "/info — информация о вас\n"
        "/time — текущее время\n"
        "/about — информация о боте\n"
        "/device - информация о вашем телефоне"
    )

# Обратный текст (только если это не команда)
@dp.message(F.text)
async def reverse_text_handler(message: Message) -> None:
    if message.text.startswith("/"):
        return
    await message.reply(f" Обратный текст:\n{message.text[::-1]}")

# Запуск бота
async def main() -> None:
    bot = Bot(token=TOKEN)
    await dp.start_polling(bot)

if __name__ == "__main__":
    asyncio.run(main())
